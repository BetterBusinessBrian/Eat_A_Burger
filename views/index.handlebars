<div class="container">
    <div class="card col-10">
        <button type= "button" class="btn btn-warning"><h1>Eat da Burger!</h1></button>
    </div>

    <div class="row">
        <div class="card col-5">
            <h2>Add a Burger</h2>
            <img src= "../public/assets/img/burger2.jpg" alt= "burger" class= "img-fluid">
        </div>
        <div class="card col-5">
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="slee">Eaten?</label><br>
                <input type="radio" name="devoured" value="1" checked> Ready to eat!<br>
                <input type="radio" name="devoured" value="0"> Already Devoured
            </div>

            <button class="btn btn-warning" type="submit">Add Burger</button>
        </form>
    </div>
    </div>

    <div class="row">
        <div class=" card col-5">
            <h2>Burgers to eat</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>

        </div>
        <div class=" card col-5">
            <h2>Burgers eaten</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>





</div>